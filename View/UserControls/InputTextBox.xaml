<UserControl x:Class="FDPortal.View.UserControls.InputTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FDPortal.View.UserControls"
             mc:Ignorable="d" Name="inputTextBox">
    <Grid Margin="0 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Padding="0 5" Grid.Row="0" Text="{Binding ElementName=inputTextBox,Path=Title}" Style="{StaticResource HeadingThree}" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding ElementName=inputTextBox, Path=Text}" Grid.Row="1" Width="250" HorizontalAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource PrimaryTextBox}"/>
    </Grid>
</UserControl>
